@page "{phoneUserId:int?}"
@model PhoneBook.WebUI.Pages.PhoneBookUsers.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Updating @Model.PhoneUser.FirstName @Model.PhoneUser.LastName</h2>

<form method="post">



    <input type="hidden" asp-for="PhoneUser.Id" />

    <div class="form-group">

        <label asp-for="PhoneUser.FirstName"></label>

        <input asp-for="PhoneUser.FirstName" class="form-control" />

        <span class="text-danger" asp-validation-for="PhoneUser.FirstName"></span>

    </div>

    <div class="form-group">

        <label asp-for="PhoneUser.LastName"></label>

        <input asp-for="PhoneUser.LastName" class="form-control" />

        <span class="text-danger" asp-validation-for="PhoneUser.LastName"></span>

    </div>

    <div class="form-group">

        <label asp-for="PhoneUser.PhoneType"></label>

        <select class="form-control" asp-for="PhoneUser.PhoneType"
                asp-items="Model.PhoneType"></select>

        <span class="text-danger" asp-validation-for="PhoneUser.PhoneType"></span>

    </div>
    <div class="form-group">

        <label asp-for="PhoneUser.PhoneNumber"></label>

        <input asp-for="PhoneUser.PhoneNumber" class="form-control" />

        <span class="text-danger" asp-validation-for="PhoneUser.PhoneNumber"></span>

    </div>



    <button type="submit" class="btn btn-primary">Save</button>

</form>



@section Scripts {

    <partial name="_ValidationScriptsPartial" />

}
